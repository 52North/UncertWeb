{
	"type": "object",
	"description": "a resource object",
	"properties": {
		"id": {
			"type": "string",
			"required": true,
			"description": "resource identifier"
		},
		"mimeType": {
			"type": "string",
			"required": true,
			"description": "resource type"
		},
		"phenomenon": {
			"type": "string",
			"required": true,
			"description": "the phenomenon of the visualization"
		},
		"temporalExtent": {
			"type": "object",
			"description": "the temporal extent of the resource",
			"properties": {
				"instant": {
					"id": "timeinstant",
					"type": "string",
					"format": "date-time",
					"description": "the time of the data"
				},
				"begin": {
					"type": "string",
					"format": "date-time",
					"description": "the begin of the temporalExtent"
				},
				"end": {
					"type": "string",
					"format": "date-time",
					"description": "the end of the temporalExtent"
				},
				"intervalSize": {
					"type": "integer",
					"minimum": 0,
					"minimumExclusive": true,
					"description": "the size of regular intervals"
				},
				"seperator": {
					"type": "integer",
					"minimum": 0,
					"minimumExclusive": true,
					"description": "the time span between regular time instants"
				},
				"intervals": {
					"type": "array",
					"description": "the intervals of irregular intervals",
					"items": {
						"type": "object",
						"properties": {
							"begin": {
								"type": "string",
								"format": "date-time"
							},
							"end": {
								"type": "string",
								"format": "date-time"
							}
						}
					}
				},
				"instants": {
					"type": "array",
					"description": "the instants of irregular instants",
					"items": {
						"type": {
							"$ref": "timeinstant"
						}
					},
					"minItems": 2
				},
			},
			"dependencies" : {
				"begin" : "end",
				"end" : "begin",
				"intervalSize": [ "begin", "end" ],
				"seperator": [ "begin", "end" ],
				"intervals": [ "begin", "end" ],
				"instants": [ "begin", "end" ],
			}
		},
		"visualizations": {
			"type": "array",
			"required": true,
			"description": "array of already generated visualizations",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"required": true,
						"description": "the id of the visualization"
					},
					"href": {
						"type": "string",
						"format": "uri",
						"required":true,
						"description": "the URI of the visualization"
					}
				}
			}
		}
	}
}
