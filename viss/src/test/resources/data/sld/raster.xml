<sld:StyledLayerDescriptor xmlns:sld="http://www.opengis.net/sld" version="1.0.0">
	<sld:NamedLayer>
		<sld:Name>OpenLayersScaleBar</sld:Name>
		<sld:UserStyle>
			<sld:FeatureTypeStyle>
				<sld:Rule>
					<sld:RasterSymbolizer>
						<sld:ColorMap type="intervals">
							<sld:ColorMapEntry color="#000000" opacity="0.8" quantity="-1" />
							<sld:ColorMapEntry color="#7FFF00" opacity="0.8" quantity="-0.5" />
							<sld:ColorMapEntry color="#CFFF00" opacity="0.8" quantity="0" />
							<sld:ColorMapEntry color="#FFDF00" opacity="0.8" quantity="0.5" />
							<sld:ColorMapEntry color="#FF8F00" opacity="0.8" quantity="1" />
							<sld:ColorMapEntry color="#FF0000" opacity="0.8" quantity="1.7976931348623157e+308" />
						</sld:ColorMap>
					</sld:RasterSymbolizer>
				</sld:Rule>
			</sld:FeatureTypeStyle>
		</sld:UserStyle>
	</sld:NamedLayer>
</sld:StyledLayerDescriptor>