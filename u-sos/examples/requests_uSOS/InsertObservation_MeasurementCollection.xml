							<gmd:valueUnit>
								<gml:UnitDefinition gml:id="cm">
									<gml:identifier codeSpace="http://unitsofmeasure.org/">cm</gml:identifier>
								</gml:UnitDefinition>
							</gmd:valueUnit>
							<gmd:value>
								<un:NormalDistribution>
									<un:mean>10.234</un:mean>
									<un:variance>1.34</un:variance>
								</un:NormalDistribution> 
							</gmd:value>
						</gmd:DQ_UncertaintyResult>
					</gmd:result>
					<gmd:result>
						<gmd:DQ_UncertaintyResult>
							<gmd:valueUnit>
								<gml:UnitDefinition gml:id="cm">
									<gml:identifier codeSpace="http://unitsofmeasure.org/">cm</gml:identifier>
								</gml:UnitDefinition>
							</gmd:valueUnit>
							<gmd:value>
								<un:NormalDistribution>
									<un:mean>11.654</un:mean>
									<un:variance>1.43</un:variance>
								</un:NormalDistribution> 
							</gmd:value>
						</gmd:DQ_UncertaintyResult>
					</gmd:result>
				</gmd:DQ_QuantitativeAttributeAccuracy>
			</om:resultQuality>
		   
			<!--=============================================================
				observation result is a single measured value
				==============================================================-->
			<om:result uom="cm">11.0</om:result>
		</om:OM_Measurement>
		
		<!--=============================================================
				Observation 3
				==============================================================--> 
		<om:OM_Measurement>
			<gml:identifier codeSpace="http://www.uncertweb.org">colObs103</gml:identifier>
		   
			<!--=============================================================
