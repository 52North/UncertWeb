					<sf:type xlink:href="http://www.opengis.net/def/samplingFeatureType/OGC-OM/2.0/SF_SamplingPoint "/>
					<sf:sampledFeature xsi:nil="true"/>
					<sams:shape>
						<gml:Point gml:id="UOMlocation">
							<gml:pos srsName="http://www.opengis.net/def/crs/EPSG/0/4326">52.00 7.00</gml:pos>
						</gml:Point>
					</sams:shape>
				</sams:SF_SpatialSamplingFeature>
			</om:featureOfInterest>
		   
			<!--=============================================================
				observation result is a single uncertainty
				==============================================================-->
			<om:result uom="m/s">
				<un:RandomSample xmlns:un="http://www.uncertml.org/2.0">
  					<un:samplingMethodDescription>Importance sampler with uniform proposal distribution</un:samplingMethodDescription>
					<un:Realisation id="R-ID_01" xmlns:un="http://www.uncertml.org/2.0">
						<un:weight>-1.0</un:weight>
						<un:values>12.21</un:values>
					</un:Realisation>
					<un:Realisation id="R-ID_02" xmlns:un="http://www.uncertml.org/2.0">
						<un:weight>-1.0</un:weight>
						<un:values>12.22</un:values>
					</un:Realisation>
					<un:Realisation id="R-ID_03" xmlns:un="http://www.uncertml.org/2.0">
						<un:weight>-1.0</un:weight>
						<un:values>12.23</un:values>
					</un:Realisation>
				</un:RandomSample>
			</om:result>
		</om:OM_UncertaintyObservation>
		
		
		<!--=============================================================
				Observation 3
				==============================================================-->  
	  
