<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.uncertweb</groupId>
        <artifactId>xml</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>xmlbeans</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>UncertWeb XmlBeans</name>
    <packaging>pom</packaging>

    <modules>
        <module>sld</module>
        <module>wfs</module>
        <module>uncertml</module>
        <module>uncertml-x</module>
        <module>om</module>
        <module>gml</module>
        <module>gmd</module>
        <module>xlinks</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.uncertweb</groupId>
            <artifactId>xmlschema</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.xmlbeans</groupId>
            <artifactId>xmlbeans</artifactId>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>

            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>xmlbeans-maven-plugin</artifactId>
                    <version>2.3.3</version>
                    <configuration>
                        <memoryInitialSize>512M</memoryInitialSize>
						<memoryMaximumSize>1024M</memoryMaximumSize>
                        <download>true</download>
                        <schemaDirectory>target/xmlbeans-xsds/META-INF/xml</schemaDirectory>
                        <xsdJars>
                            <xsdJar>${project.groupId}:xmlschema</xsdJar>
                        </xsdJars>
                    </configuration>
                    <executions>
                        <execution>
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>xmlbeans</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
